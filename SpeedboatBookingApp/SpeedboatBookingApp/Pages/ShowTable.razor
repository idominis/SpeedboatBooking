@page "/showtable"
@using SpeedboatBookingApp.Models
@inject GoogleSheetsService SheetsService

<h3>Google Sheet Table with Vertical Text Aligned to Bottom and Text Colors</h3>

@if (sheetData != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                @foreach (var header in sheetData.FirstOrDefault().Select((value, index) => new { Value = value, Index = index }))
                {
                    <th style="@(header.Index >= 2 ? "position: relative; height: 200px; padding: 0;" : "")">
                        <div style="@(header.Index >= 2 ? "writing-mode: vertical-rl; transform: rotate(180deg); position: absolute; bottom: 10px; left: 50%; transform: translateX(-50%) rotate(180deg); padding-bottom: 5px;" : "")">
                            @header.Value?.Value
                        </div>
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in sheetData.Skip(1))
            {
                <tr>
                    @foreach (var cell in row)
                    {
                        <td style="background-color:@cell.BackgroundColor; color:@cell.TextColor">
                            @cell?.Value
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading data...</p>
}

@code {
    private IList<IList<CellDataResponse>>? sheetData;

    protected override async Task OnInitializedAsync()
    {
        sheetData = await SheetsService.GetSheetDataWithColorsAsync("Availability2024"); // Replace with your sheet name
    }
}
