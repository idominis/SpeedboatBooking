@page "/showtable"
@using SpeedboatBookingApp.Models
@inject GoogleSheetsService SheetsService

<h3>Google Sheet Table with Vertical Text and Square Cells</h3>

@if (sheetData != null)
{
    <table class="table table-striped" style="table-layout: fixed;">
        <thead>
            <tr>
                @for (var colIndex = 0; colIndex < sheetData[0].Count; colIndex++)
                {
                    <th style="@(colIndex >= 2 ? "position: relative; height: 200px; padding: 0;" : "")">
                        <div style="@(colIndex >= 2 ? "writing-mode: vertical-rl; transform: rotate(180deg); position: absolute; bottom: 10px; left: 50%; transform: translateX(-50%) rotate(180deg); padding-bottom: 5px;" : "")">
                            @sheetData[0][colIndex]?.Value
                        </div>
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @for (var rowIndex = 1; rowIndex < sheetData.Count; rowIndex++)
            {
                <tr>
                    @for (var colIndex = 0; colIndex < sheetData[rowIndex].Count; colIndex++)
                    {
                        <td class="@(colIndex >= 2 ? "square-cell" : "")"
                            style="background-color:@sheetData[rowIndex][colIndex].BackgroundColor; color:@sheetData[rowIndex][colIndex].TextColor">
                            @sheetData[rowIndex][colIndex]?.Value
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading data...</p>
}

@code {
    private IList<IList<CellDataResponse>>? sheetData;

    protected override async Task OnInitializedAsync()
    {
        sheetData = await SheetsService.GetSheetDataWithColorsAsync("Availability2024");
    }
}
